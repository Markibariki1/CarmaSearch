# VICE API Environment Configuration
# Copy this file to .env and modify as needed

# Environment
VICE_ENV=dev
VICE_API_KEYS=dev-key-1,dev-key-2

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vice
DB_USER=vice
DB_PASSWORD=vice

# Redis
REDIS_URL=redis://localhost:6379/0

# S3 Storage (optional)
S3_ENDPOINT=
S3_BUCKET=vice-rules
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# External APIs
ECB_RATES_CACHE_TTL_SECONDS=86400
TARIC_BASE_URL=https://taxation-customs.ec.europa.eu
HTS_US_BASE_URL=https://hts.usitc.gov
WITS_BASE_URL=https://wits.worldbank.org

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# Request limits
MAX_REQUEST_SIZE_KB=64
