# Simple Flask API for Azure Container Apps
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements_flask.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_flask.txt

# Copy application code
COPY src/app_flask.py ./app.py
COPY src/similarity_engine.py ./similarity_engine.py
COPY src/ranking_pipeline.py ./ranking_pipeline.py
COPY src/__init__.py ./__init__.py

# Create non-root user
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app
USER app

# Expose port
EXPOSE 8000

# Run the application
CMD ["python", "app.py"]
